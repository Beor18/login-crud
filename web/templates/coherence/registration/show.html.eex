<h2><%= dgettext "coherence", "Show account" %></h2>
<ul>
  <li>
    <strong><%= dgettext "coherence", "Nombre:" %></strong>
    <%= @user.name %>
  </li>
  <%= unless (login_field = Coherence.Config.login_field) == :email do %>
    <li>
      <strong><%= humanize login_field %></strong>
      <%= Map.get(@user, login_field) %>
    </li>
  <% end %>

  <li>
    <strong><%= dgettext "coherence", "Email:" %></strong>
    <%= @user.email %>
  </li>

</ul>

<%= link dgettext("coherence", "Editar"), to: registration_path(@conn, :edit) %> |
<%= link dgettext("coherence", "Borrar"),
        to: registration_path(@conn, :delete),
        method: :delete,
        data: [confirm: dgettext("coherence", "Esta seguro?")] %>
